@using PPOB.Models.PDAM;
@{
    List<MasterPDAM> List = (List<MasterPDAM>)ViewData["ListPDAM"];
    var no = 0;
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-warning">
            <div class="box-body">
                <button class="btn btn-success" onclick="return FormAdd()"><span class="fa fa-plus"></span> Add Member</button>
                <hr />
                <table id="table" class="table table-bordered table-striped table-condensed">
                    <thead style="color:blue">
                        <tr>
                            <th style="width:10px; text-align:center;" >No</th>
                            <th>PDAM Id</th>
                            <th>Deskripsi</th>
                            <th style="width:60px; text-align:center;" >Action</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">@foreach (var item in List)
                    {
                        no++;
                        <tr>
                            <td>@no</td>
                            <td >
                                <img id="image" alt="image" class="img-circle" style="width:50px;" src="@item.Photo" />
                            </td>
                            <td id="grid_pdam_id">@item.PDAMId</td>
                            <td id="grid_dskripsi">@item.Deskripsi</td>                                                        
                            <td>
                                <input id="grid_pdam_id" class="hidden" value="@item.PDAMId" />                                                                
                                <button class="btn btn-xs btn-success" title="Edit" onclick="return FormEdit($(this))"><span class="fa fa-pencil"></span></button>
                                <button class="btn btn-xs btn-danger" title="Delete" onclick="return DeletePopUp($(this))"><span class="fa fa-trash"></span></button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



