@*@model IEnumerable<PPOB.Models.MasterOperator>*@
@using PPOB.Models;
@{
    List<MasterOperator> List = (List<MasterOperator>)ViewData["ListOperator"];
    var no = 0;
}
<div class="row">
    <div class="col-md-12">
        <div class="box box-warning">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box box-warning">
                        <div class="box-body">
                            <button class="btn btn-success" onclick="return FormAdd()"><span class="fa fa-plus"></span> Add User</button>
                            <hr />
                            <table id="table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:10px; text-align:center;">No</th>
                                        <th>Nama Operator</th>
                                        <th style="width:40px; text-align:center;">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    @foreach (var item in List)
                                    {
                                        no++;
                                        <tr>
                                            <td>@no</td>
                                            <td id="grid_nama_operator">@item.NamaOperator</td>
                                            <td style="text-align:center;">
                                                <input id="grid_id_operaror" class="hidden " value="@item.IdOperator" />
                                                <button class="btn btn-xs btn-success" title="Edit" onclick="return FormEdit($(this))"><span class="fa fa-pencil"></span></button>
                                                <button class="btn btn-xs btn-danger" title="Delete" onclick="return DeletePopUp($(this))"><span class="fa fa-trash"></span></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



